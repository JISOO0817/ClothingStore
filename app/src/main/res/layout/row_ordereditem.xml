<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/itemImageIv"
            android:layout_marginBottom="15dp"/>


        <TextView
            android:id="@+id/itemTitleTv"
            android:layout_below="@id/itemImageIv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상품 타이틀"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/itemPriceEachTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemTitleTv"
            android:gravity="center"
            android:text="개당 가격"
            android:textColor="@color/colorBlack"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemTitleTv"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">


            <TextView
                android:id="@+id/itemQuantityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="[2]"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/itemPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemTitleTv"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="총 가격"
                android:textColor="@color/colorBlack"/>




        </LinearLayout>




    </RelativeLayout>

</androidx.cardview.widget.CardView>