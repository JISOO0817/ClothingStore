<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MarketDetailActivity"
    android:background="@color/colorWhite">

    <!-- 마켓 상세 -->

    <RelativeLayout
        android:id="@+id/marketRl"
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <ImageView
            android:id="@+id/marketIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/colorGray02"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#79000000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/marketNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="마켓 이름"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/phoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:layout_below="@id/marketNameTv"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="3dp"/>

            <TextView
                android:id="@+id/emailTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:layout_below="@id/phoneTv"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="3dp"/>

            <TextView
                android:id="@+id/openCloseTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오픈"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="3dp"/>

            <TextView
                android:id="@+id/deliveryFeeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배달료"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:layout_below="@id/openCloseTv"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="3dp"/>


            <TextView
                android:id="@+id/address1Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소"
                android:layout_below="@id/emailTv"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/address2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소"
                android:layout_below="@id/address1Tv"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="right|center_horizontal"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/callBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/ic_call_white" />

                <!--
                <ImageButton
                    android:id="@+id/mapBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:src="@drawable/ic_map_white" /> -->

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect01"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/cart_Btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/ic_cart_white"/>

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_back_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="마켓 상세"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/productsRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/marketRl"
        android:layout_marginTop="2dp">


        <EditText
            android:id="@+id/searchProductEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/filterBtn"
            android:background="@drawable/shape_rect02"
            android:drawableLeft="@drawable/ic_search_gray"
            android:drawablePadding="10dp"
            android:hint="상품 검색"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/filterBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_filter_gray" />

        <TextView
            android:id="@+id/filteredProductsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchProductEt"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="전체"
            android:textColor="@color/colorBlack" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/filteredProductsTv"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/row_product_user" />


    </RelativeLayout>


</RelativeLayout>