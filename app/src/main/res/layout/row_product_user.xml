<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:id="@+id/rela_user"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/shape_rect06">

        <ImageView
            android:id="@+id/productIconIv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_add_shopping_primary"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productIconIv"
            android:gravity="center"
            android:layout_marginTop="31dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="타이틀"
                android:textColor="@color/colorBlack" />

            <!--
            <TextView
                android:id="@+id/quantityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/colorBlack" /> -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">


                <TextView
                    android:id="@+id/discountedPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="10,000won"
                    android:textColor="@color/colorGray02" />

                <TextView
                    android:id="@+id/originalPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/discountedPriceTv"
                    android:layout_centerHorizontal="true"
                    android:text="1won"
                    android:textColor="@color/colorGray02" />

                <TextView
                    android:id="@+id/showDetailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="상세보기"
                    android:drawableLeft="@drawable/ic_detail"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@+id/originalPriceTv"/>

            </RelativeLayout>


        </LinearLayout>

        <!--  <ImageView
              android:id="@+id/nextIv"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter"
              android:layout_centerVertical="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="5dp"
              android:layout_alignParentRight="true"
              android:src="@drawable/ic_next_gray"/>  -->


    </RelativeLayout>

</androidx.cardview.widget.CardView>